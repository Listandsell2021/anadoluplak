{% assign collection_handle = section.settings.bestseller_collection | default: 'bestsellers' %}
{% assign collection = collections[collection_handle] %}

{% if collection != blank %}
  {% assign sorted_products = collection.products | sort: 'best-selling' %}
  {% assign products_to_show = sorted_products | slice: 0, section.settings.products_to_show %}
    <div class="bestsellers-section page-width">
    <h2 class="text-2xl font-bold mb-4">{{section.settings.bestseller_title}}</h2>
     <div class="bestsellers-slider">
          {% for product in products_to_show %}
            <div class="product-card border p-2 rounded shadow hover:shadow-lg text-center">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="mb-2 mx-auto">
                <p class="font-semibold">{{ product.title }}</p>
                <p class="text-sm text-gray-500">{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
  {% else %}
    <div class="no-collection page-width">
  <p>Für Bestseller ist keine Sammlung verfügbar.</p>
    </div>
{% endif %}

{% schema %}
{
  "name": "Bestsellers",
  "settings": [
    {
      "type": "text",
      "id": "bestseller_title",
      "label": "Bestseller Title"
    },
    {
      "type": "collection",
      "id": "bestseller_collection",
      "label": "Bestseller Collection"
    },
    {
      "type": "number",
      "id": "products_to_show",
      "label": "Number of Products",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Bestsellers",
      "category": "Custom"
    }
  ]
}
{% endschema %}