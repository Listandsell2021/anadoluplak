<div class="SchallplattenSec">
<div class="page-width">
    <div class="SchallplattenRow">
     <div class="leftSchallplatten">
        <div class="cmnTlt">
         <h4 class="commonTitle">{{ section.settings.Schallplatten_main_heading }}</h4>
        </div>
        <p>{{ section.settings.Schallplatten_intro_paragraph_1 }}</p>
        <p>{{ section.settings.Schallplatten_intro_paragraph_2 }}</p>

        <div class="marginTSchallplatten">
         <div class="cmnTlt">
            <h4 class="commonTitle">{{ section.settings.Schallplatten_sub_heading }}</h4>
         </div>
         <p>{{ section.settings.Schallplatten_detail_paragraph_1 }}</p>
         <p>{{ section.settings.Schallplatten_detail_paragraph_2 }}</p>
         <p>{{ section.settings.Schallplatten_detail_paragraph_3 }}</p>
        </div>

        <div class="SchallplattenBox">
         {% for block in section.blocks %}
            <div class="SchallplattenIconBox">
             {% if block.settings.Schallplatten_icon_image %}
                <img src="{{ block.settings.Schallplatten_icon_image | image_url }}" alt="">
             {% endif %}
             <h4>{{ block.settings.Schallplatten_box_title }}</h4>
             <p>{{ block.settings.Schallplatten_box_text }}</p>
            </div>
         {% endfor %}
        </div>
     </div>

     <div class="imageSchallplatten">
        <div class="imgInnerSchallplatten">
         {% if section.settings.Schallplatten_side_image %}
            <img src="{{ section.settings.Schallplatten_side_image | image_url }}" alt="">
         {% endif %}
        </div>
     </div>
    </div>
</div>
</div>

{% schema %}
{
"name": "Schallplatten Info",
"settings": [
    {
     "type": "text",
     "id": "Schallplatten_main_heading",
     "label": "Main Heading",
     "default": "Türkische Schallplatten & CDs – mit Herz ausgewählt"
    },
    {
     "type": "textarea",
     "id": "Schallplatten_intro_paragraph_1",
     "label": "Intro Paragraph 1",
     "default": "Willkommen bei Anadoluplak – Ihrem Online-Shop für türkische Schallplatten und CDs..."
    },
    {
     "type": "textarea",
     "id": "Schallplatten_intro_paragraph_2",
     "label": "Intro Paragraph 2",
     "default": "Wir verkaufen nicht einfach Musik – wir teilen Erinnerungen..."
    },
    {
     "type": "text",
     "id": "Schallplatten_sub_heading",
     "label": "Sub Heading",
     "default": "Klänge, die Geschichten erzählen"
    },
    {
     "type": "textarea",
     "id": "Schallplatten_detail_paragraph_1",
     "label": "Detail Paragraph 1",
     "default": "Was Sie bei uns erwartet? Eine liebevoll zusammengestellte Mischung..."
    },
    {
     "type": "textarea",
     "id": "Schallplatten_detail_paragraph_2",
     "label": "Detail Paragraph 2",
     "default": "Und wenn mal etwas nicht dabei ist – schreiben Sie uns..."
    },
    {
     "type": "textarea",
     "id": "Schallplatten_detail_paragraph_3",
     "label": "Detail Paragraph 3",
     "default": "Also: Neugierig geworden? Stöbern Sie los..."
    },
    {
     "type": "image_picker",
     "id": "Schallplatten_side_image",
     "label": "Right Side Image"
    }
],
"blocks": [
    {
     "type": "Schallplatten_box",
     "name": "Feature Box",
     "settings": [
        {
         "type": "image_picker",
         "id": "Schallplatten_icon_image",
         "label": "Icon Image"
        },
        {
         "type": "text",
         "id": "Schallplatten_box_title",
         "label": "Box Title",
         "default": "Box Title"
        },
        {
         "type": "textarea",
         "id": "Schallplatten_box_text",
         "label": "Box Text",
         "default": "Box description goes here."
        }
     ]
    }
],
"max_blocks": 4,
"presets": [
    {
     "name": "Schallplatten Info Section",
     "category": "Custom",
     "blocks": [
        {
         "type": "Schallplatten_box",
         "settings": {
            "Schallplatten_box_title": "Handverlesene Auswahl",
            "Schallplatten_box_text": "Jede Platte, jede CD wird von uns persönlich kuratiert..."
         }
        },
        {
         "type": "Schallplatten_box",
         "settings": {
            "Schallplatten_box_title": "Faire Preise",
            "Schallplatten_box_text": "Wir bieten faire, ehrliche Preise..."
         }
        },
        {
         "type": "Schallplatten_box",
         "settings": {
            "Schallplatten_box_title": "Schneller Versand",
            "Schallplatten_box_text": "Ob Berlin, Köln oder Kalifornien – wir schicken Ihre Musik..."
         }
        },
        {
         "type": "Schallplatten_box",
         "settings": {
            "Schallplatten_box_title": "Mehrsprachiger Support",
            "Schallplatten_box_text": "Ob auf Deutsch, Türkisch oder Englisch..."
         }
        }
     ]
    }
]
}
{% endschema %}